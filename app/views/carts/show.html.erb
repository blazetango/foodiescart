
<table id="line_items">
  <tr>
    <th>Product</th>
    <th>Brand</th>
    <th>Qty</th>
    <th class="price">Unit Price</th>
    <th class="price">Full Price</th>
  </tr>
  <% for line_item in @cart.line_items %>
    <tr class="<%= cycle :odd, :even %>">
      <td><%=h line_item.product.ingredient.name %></td>
      <td><%=h line_item.product.brand.name %></td>
      <td class="qty"><%= line_item.quantity %></td>
      <td class="price"><%= number_to_currency(line_item.product.price) %></td>
      <td class="price"><%= number_to_currency(line_item.total_price) %></td>
    </tr>
  <% end %>
  <tr>
    <td class="total price" colspan="4">
      <b style ="margin-left:960px"> Total: <%= number_to_currency @cart.total_price %> </b>
    </td>
  </tr>
</table>

<p>
  <%= link_to "Continue Shopping", products_url %> |
  <%= link_to "Checkout", @cart.paypal_url(products_url) %>
  <%= link_to "checkout", new_order_path %>
</p>
