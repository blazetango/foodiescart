<%= nested_form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :category %><br />
    <%= f.text_field :category %>
  </div>
  <div class="field">
    <%= f.label :difficulty_level %><br />
    <%= f.text_field :difficulty_level %>
  </div>
  <div class="field">
    <%= f.label :cooking_time %><br />
    <%= f.datetime_select :cooking_time %>
  </div>
  <div class="field">
    <%= f.label :preparation_method %><br />
    <%= f.text_area :preparation_method %>
  </div>
  <div class="field">
    <%= f.label :author_name %><br />
    <%= f.text_field :author_name %>
  </div>
  <div class="field">
    <%= f.label :add_photo %><br />
    <%= f.file_field :photo %>
  </div>

<%= f.fields_for :ingredient_recipes do |task_form| %>
  <%= task_form.autocomplete_field :ingredient_name, autocomplete_ingredient_name_ingredient_recipes_path %>
  <%= task_form.link_to_remove "Remove this ingredient" %>
<% end %>
<p><%= f.link_to_add "Add ingredient", :ingredient_recipes %></p>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
